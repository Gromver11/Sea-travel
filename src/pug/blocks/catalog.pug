h2.catalog__title Каталог круизов
p.catalog__sort Сортировать круизы по&nbsp;цене
div.catalog__cards
    section.card.catalog__card.catalog__card--big
        div.card__pictures
            img(class="card__img card__img--mobile" src="../images/anapa.jpg" alt ='Анапа')
            img(class='card__img card__img--tab' src="../images/anapa-tab.jpg" alt='Анапа')
            img(class='card__img card__img--dsk' src="../images/anapa-d.jpg" alt='Анапа')
        p.card__tag.card__tag--blue Хит продаж
        div.card__content
            h2.card__title
                a(class='card__link' href='#') Морская прогулка в&nbsp;Анапу
            div.card__description.description
                dl.description__row
                    dt.description__text.description__text--bold Маршрут:
                    dd.description__text Сочи-Лазаревское-Геленджик-Анапа
                dl.description__row
                    dt.description__text.description__text--bold  Продолжительность:
                    dd.description__text 10&nbsp;ч.&nbsp;0&nbsp;мин
            div.card__price
                p.price__value 49&nbsp;000&nbsp;руб.
    section.card.catalog__card.catalog__card--desktop-col
        div.card__pictures
            img(class="card__img card__img--mobile" src="../images/sochi.jpg" alt ='Сочи')
            img(class='card__img card__img--tab' src="../images/sochi-tab.jpg" alt='Сочи')
            img(class='card__img card__img--dsk' src="../images/sochi-d.jpg" alt='Сочи')
        p.card__tag.card__tag--pink.card__tag--position Акция
        div.card__content
            h2.card__title.card__title--different-width
                a(class='card__link' href='#') Обзорная морская прогулка с&nbsp;экскурсией
            div.card__description.description
                dl.description__row
                    dt.description__text.description__text--bold Маршрут:
                    dd.description__cell.description__text Сочи-Адлер-Сочи (без&nbsp;высадки)
                dl.description__row
                    dt.description__text.description__text--bold Продолжительность:
                    dd.description__text 1 ч. 0 мин
            div.card__price.price
                p.price__value 5 000 руб.
                p.price__value.price__value--prev 15000 руб.
    section.card.catalog__card.catalog__card--tablet-col
        div.card__pictures
            img(class="card__img card__img--mobile" src="../images/Gel.jpg" alt ='Геленджик')
            img(class='card__img card__img--tab' src="../images/Gel-tab.jpg" alt='Геленджик')
            img(class='card__img card__img--dsk' src="../images/Gel-d.jpg" alt='Геленджик')
        p.tag.card__tag.card__tag--pink Скидка
            span.tag__text 10&#37;
        div.card__content
            h2.card__title
                a(class='card__link' href='#') Морская прогулка в&nbsp;Геленджик
            div.card__description.description.card__description--different-margin
                dl.description__row
                    dt.description__text.description__text--bold Маршрут:
                    dd.description__text Cочи-Туапсе-Геленджик
                dl.description__row
                    dt.description__text.description__text--bold Продолжительность:
                    dd.description__text 12 ч. 30 мин
            div.card__price.price
                p.price__value 7 000 руб.
                p.price__value.price__value--prev 10000 руб.
    section.card.catalog__card.catalog__card--last-of-the-mobile
        div.card__pictures
            img(class="card__img card__img--mobile" src="../images/nov.jpg" alt ='Новороссийск')
            img(class='card__img card__img--tab' src="../images/nov-tab.jpg" alt='Новороссийск')
            img(class='card__img card__img--dsk' src="../images/nov-d.jpg" alt='Новороссийск')
        div.card__content
            h2.card__title
                a(class='card__link' href='#') Морской круиз в&nbsp;Новороссийск
            div.description.card__description
                dl.description__row
                    dt.description__text.description__text--bold Маршрут:
                    dd.description__text Cочи-Геленджик-Новороссийск-Геленджик-&nbsp;Сочи
                dl.description__row
                    dt.description__text.description__text--bold Продолжительность:
                    dd.description__text 13 ч. 0 мин
            div.card__price.price
                p.price__value 14 800 руб.
    section.card.catalog__card.catalog__card--desktop
        div.card__pictures
            img(class='card__img card__img--dsk' src="../images/abrau-d.jpg" alt='Абрау-Дюрсо')
        div.card__content
            h2.card__title
                a(class='card__link' href='#') Морская прогулка в Абрау-Дюрсо
            div.card__description.description
                dl.description__row
                    dt.description__text.description__text--bold Маршрут:
                    dd.description__text Cочи-Абрау-Дюрсо
                dl.description__row
                    dt.description__text.description__text--bold Продолжительность:
                    dd.description__text 11 ч. 0 мин
            div.card__price.price
                p.price__value 14 800 руб.
